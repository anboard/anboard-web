{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "./src",
      "paths": {
        "*": ["types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }
  